spawn(function()
    -- Liên tục kiểm tra trạng thái của biến _G.EventDone
    while true do
        -- Lấy nhân vật và HumanoidRootPart của người chơi
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

        -- Lấy vị trí hiện tại của nhân vật
        local currentPos = humanoidRootPart.Position

        -- Vị trí cũ và vị trí mới để kiểm tra
        local newPos = Vector3.new(10313.41, 15588.15, 8170.55)

        -- Định nghĩa bán kính phạm vi kiểm tra (tùy chỉnh nếu cần)
        local radius = 3 -- Bán kính trong khoảng cách mà bạn muốn kiểm tra

        -- Kiểm tra nếu biến _G.EventDone là true
        if _G.EventDone == true then
            -- Nếu _G.EventDone là true, đợi 1 phút rồi chuyển nhân vật đến vị trí mới
            wait(60) -- Đợi 60 giây (1 phút)
            -- Dịch chuyển nhân vật đến vị trí mới
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(newPos)
            return -- Dừng script sau khi chuyển nhân vật
        else
            --print("Chưa hoàn thành sự kiện!")
        end

        -- Dừng 1 giây trước khi kiểm tra lại
        wait(10)
    end
end)
