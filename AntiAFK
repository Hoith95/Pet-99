-- Lấy đối tượng người chơi hiện tại.
local plr = game.Players.LocalPlayer
-- Lấy dịch vụ VirtualUser để tương tác tự động.
local vu = game:GetService("VirtualUser")
-- Kết nối sự kiện Idled với một hàm để tránh bị kick vì AFK.
plr.Idled:connect(function()
    vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    wait(1)
    vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
end)

-- Ghi đè phương thức __namecall để ngăn chặn việc gửi thông tin idle.
local old 
old = hookmetamethod(game,"__namecall",(function(...) 
    local self,arg = ...
    if not checkcaller() then 
        if getnamecallmethod() == "FireServer" and tostring(self) == "__BLUNDER" or tostring(self) == "Idle Tracking: Update Timer" or tostring(self) == "Move Server" then return end
    end
    return old(...)
end))
