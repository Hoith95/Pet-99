local fpsLabel = Instance.new("TextLabel", screenGui)
fpsLabel.Name = "FPSLabel"
fpsLabel.Size = UDim2.new(0, 118, 0, 38)
fpsLabel.Position = UDim2.new(1, -120, 0, -55)
fpsLabel.BackgroundColor3 = Color3.fromRGB(0, 128, 0)
fpsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
fpsLabel.Font = Enum.Font.GothamBold
fpsLabel.TextSize = 38
fpsLabel.Text = "FPS: ..."
fpsLabel.BackgroundTransparency = 0
fpsLabel.BorderSizePixel = 0

local startTime = tick()

task.spawn(function()
    while true do
        local diamonds = Players.LocalPlayer.leaderstats["üíé Diamonds"].Value
        diamondLabel.Text = "GEMS: " .. Formatint(diamonds)

        -- Ki·ªÉm tra PlaceId v√† hi·ªÉn th·ªã lo·∫°i coin t∆∞∆°ng ·ª©ng
        local coinText = "COINS: N/A"
        if game.PlaceId == 95635359880599 then
            coinText = "COINS: " .. Formatint(getCurrencyAmount("FishingEvent"))
        elseif game.PlaceId == 140403681187145 then
            coinText = "COINS: " .. Formatint(getCurrencyAmount("GymCoins"))
        elseif game.PlaceId == 99703032952567 then
            coinText = "RUBIES: " .. Formatint(getCurrencyAmount("TowerDefenseRubies"))
        end
        currencyLabel.Text = coinText

        timeLabel.Text = "TIMES: " .. formatTime(tick() - startTime)
        task.wait(1)
    end
end)

local lastUpdate = tick()
local frameCount = 0

RunService.RenderStepped:Connect(function()
    frameCount += 1
    local now = tick()
    if now - lastUpdate >= 1 then
        local fps = frameCount / (now - lastUpdate)
        fpsLabel.Text = string.format("FPS: %d", fps + 0.5)
        frameCount = 0
        lastUpdate = now
    end
end)
