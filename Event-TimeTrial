if _G.VAR_TIME_TRIAL then
	warn("â›” Script Ä‘Ã£ Ä‘Æ°á»£c cháº¡y trÆ°á»›c Ä‘Ã³!")
	return
end

_G.VAR_TIME_TRIAL = true

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local Save = require(game.ReplicatedStorage.Library.Client.Save)
local ZoneCmds = require(game.ReplicatedStorage.Library.Client.ZoneCmds)

-- Data extract
local function getRunsUsed()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.DailyRuns or 0) or 0
end

local function getRunsLeft()
	return 10 - getRunsUsed()
end

local function getTimeTrialPoints()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.Points or 0) or 0
end

local function getTotalRuns()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.TotalRuns or 0) or 0
end

-- GUI
local screenGui = playerGui:FindFirstChild("TimeTrialGui")
if not screenGui then
	screenGui = Instance.new("ScreenGui")
	screenGui.Name = "TimeTrialGui"
	screenGui.ResetOnSpawn = false
	screenGui.Parent = playerGui
end

local function createLabel(name, position, anchor, bgColor)
	local label = Instance.new("TextLabel")
	label.Name = name
	label.AnchorPoint = anchor
	label.Position = position
	label.Size = UDim2.new(0, 0, 0, 38)
	label.BackgroundColor3 = bgColor
	label.TextColor3 = Color3.new(1, 1, 1)
	label.Font = Enum.Font.GothamBold
	label.TextSize = 32
	label.BackgroundTransparency = 0
	label.BorderSizePixel = 0
	label.TextXAlignment = Enum.TextXAlignment.Center
	label.Text = "..."
	label.Parent = screenGui
	return label
end

local function updateLabelSize(label)
	label.Size = UDim2.new(0, label.TextBounds.X + 20, 0, 38)
end

local pointsLabel = screenGui:FindFirstChild("PointsLabel") or createLabel("PointsLabel", UDim2.new(0, 0, 0, -55), Vector2.new(0, 0), Color3.fromRGB(0, 128, 255))
local timeTrialLabel = screenGui:FindFirstChild("TimeTrialLabel") or createLabel("TimeTrialLabel", UDim2.new(0.5, 30, 0, -55), Vector2.new(0.5, 0), Color3.fromRGB(128, 0, 128))

task.spawn(function()
	while true do
		pointsLabel.Text = "Äiá»ƒm: " .. tostring(getTimeTrialPoints())
		updateLabelSize(pointsLabel)
		timeTrialLabel.Text = "Time Trial: " .. tostring(getRunsLeft()) .. "/10"
		updateLabelSize(timeTrialLabel)
		task.wait(10)
	end
end)

-- Zone check
local function getMaxZoneFromMap4()
	local mapFolder = workspace:FindFirstChild("Map4")
	if not mapFolder then return 0 end
	local maxZone = 0
	for _, folder in ipairs(mapFolder:GetChildren()) do
		if folder:IsA("Folder") then
			local zoneNumber = tonumber(folder.Name:match("^(%d+)"))
			if zoneNumber and zoneNumber > maxZone then
				maxZone = zoneNumber
			end
		end
	end
	return maxZone
end

local function waitUntilReachMaxZone()
	local maxMapZone = getMaxZoneFromMap4()
	while true do
		local _, data = ZoneCmds.GetMaxOwnedZone()
		local current = data and data.ZoneNumber or 0
		if current >= maxMapZone then
			warn("âœ… ÄÃ£ Ä‘áº¡t Zone tá»‘i Ä‘a (" .. tostring(current) .. ")")
			break
		end
		warn("â³ ChÆ°a Ä‘áº¡t zone tá»‘i Ä‘a (" .. tostring(current) .. "/" .. tostring(maxMapZone) .. "), Ä‘á»£i 60s...")
		task.wait(60)
	end
end

-- Teleport in/out dÃ¹ng tá»a Ä‘á»™ cá»‘ Ä‘á»‹nh
local function teleportIntoTimeTrial()
	for attempt = 1, 3 do
		local hrp = player.Character and player.Character:WaitForChild("HumanoidRootPart", 5)
		if hrp then
			hrp.CFrame = CFrame.new(-14188, 17.71, 1325)
			task.wait(1)
		end

		local loaded = false
		local detectLoad = workspace.__THINGS.__INSTANCE_CONTAINER.Active.ChildAdded:Connect(function(child)
			if child.Name == "TimeTrial" then loaded = true end
		end)

		local t = 0
		while not loaded and t < 15 do
			task.wait(0.5)
			t += 0.5
		end
		detectLoad:Disconnect()

		if loaded or workspace.__THINGS.__INSTANCE_CONTAINER.Active:FindFirstChild("TimeTrial") then
			task.wait(1)
			return true
		end
		task.wait(1)
	end

	player:Kick("â›” KhÃ´ng thá»ƒ vÃ o Time Trial sau 3 láº§n thá»­.")
	return false
end

local function teleportOutOfTimeTrial()
	for attempt = 1, 3 do
		local hrp = player.Character and player.Character:WaitForChild("HumanoidRootPart", 5)
		if hrp then
			hrp.CFrame = CFrame.new(-18438, 17.39, -573)
			task.wait(1)
		end

		local unloaded = false
		local detectUnload = workspace.__THINGS.__INSTANCE_CONTAINER.Active.ChildRemoved:Connect(function(child)
			if child.Name == "TimeTrial" then unloaded = true end
		end)

		local t = 0
		while not unloaded and workspace.__THINGS.__INSTANCE_CONTAINER.Active:FindFirstChild("TimeTrial") and t < 15 do
			task.wait(0.5)
			t += 0.5
		end
		detectUnload:Disconnect()

		if unloaded or not workspace.__THINGS.__INSTANCE_CONTAINER.Active:FindFirstChild("TimeTrial") then
			task.wait(1)
			return true
		end
		task.wait(1)
	end

	player:Kick("â›” KhÃ´ng thá»ƒ thoÃ¡t Time Trial sau 3 láº§n thá»­.")
	return false
end
-- Theo dÃµi 12 phÃºt khÃ´ng Ä‘á»•i
local monitor12minThread
local function startMonitor12Min()
	monitor12minThread = task.spawn(function()
		while true do
			local startUsed = getRunsUsed()
			local startTotal = getTotalRuns()
			local t = 0
			while t < 720 do
				task.wait(10)
				t += 10
				if getRunsUsed() ~= startUsed or getTotalRuns() ~= startTotal then break end
			end
			if getRunsUsed() == startUsed and getTotalRuns() == startTotal then
				player:Kick("â° 12 phÃºt khÃ´ng thay Ä‘á»•i lÆ°á»£t hoáº·c tá»•ng Time Trial â†’ nghi ngá» treo mÃ¡y.")
				return
			end
		end
	end)
end

-- Theo dÃµi Ä‘á»©ng im (lag)
local lagMonitorThread
local function startLagMonitor()
	lagMonitorThread = task.spawn(function()
		local retryCount = 0
		local lastPosition = nil
		while true do
			local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
			if not hrp then task.wait(5) continue end
			lastPosition = hrp.Position
			task.wait(30)
			local currentPos = hrp.Position
			if (lastPosition - currentPos).Magnitude < 1 then
				retryCount += 1
				warn("âš ï¸ Äá»©ng im " .. retryCount .. " láº§n")
				if retryCount <= 3 then
					teleportOutOfTimeTrial()
					return
				else
					player:Kick("âŒ Lag quÃ¡ lÃ¢u trong Time Trial.")
					return
				end
			else
				retryCount = 0
			end
			task.wait(5)
		end
	end)
end

-- Loop farm rÆ°Æ¡ng vá»›i logic má»›i
local function teleportFarmLoop(startPoints, startRuns)
	-- Äá»£i rÆ°Æ¡ng spawn tá»‘i Ä‘a 15s
	local waitTime = 0
	while #workspace.__THINGS.Breakables:GetChildren() == 0 and waitTime < 15 do
		task.wait(0.1)
		waitTime += 0.1
	end

	-- Kiá»ƒm tra trong 10s Ä‘áº§u cÃ³ phÃ¡ Ä‘Æ°á»£c rÆ°Æ¡ng khÃ´ng
	local farmed = false
	local start = tick()

	task.spawn(function()
		while not farmed and tick() - start < 10 do
			local breakables = workspace.__THINGS.Breakables:GetChildren()
			for _, c in ipairs(breakables) do
				if c:IsA("Model") and tonumber(c.Name) then
					local p = c:FindFirstChildWhichIsA("BasePart")
					if p then
						player.Character.HumanoidRootPart.CFrame = p.CFrame + Vector3.new(0, 5, 0)
						local timeout = 0
						while c.Parent and timeout < 5 do
							task.wait(0.1)
							timeout += 0.1
						end
						if not c.Parent then
							farmed = true
							break
						end
					end
				end
			end
			task.wait(0.1)
		end
	end)

	local t = 0
	while not farmed and t < 10 do
		task.wait(0.1)
		t += 0.1
	end

	-- Náº¿u khÃ´ng phÃ¡ Ä‘Æ°á»£c cÃ¡i nÃ o â†’ tele láº¡i
	if not farmed then
		warn("âš ï¸ KhÃ´ng phÃ¡ Ä‘Æ°á»£c Breakables nÃ o trong 10s â†’ Tele láº¡i Time Trial")
		teleportOutOfTimeTrial()
		if not teleportIntoTimeTrial() then return end
		task.wait(1)

		-- Gá»i láº¡i chÃ­nh hÃ m farm nÃ y sau khi vÃ o láº¡i
		teleportFarmLoop(startPoints, startRuns)
		return
	end

	-- Tiáº¿p tá»¥c farm bÃ¬nh thÆ°á»ng
	while true do
		local breakables = workspace.__THINGS.Breakables:GetChildren()
		if #breakables > 0 then
			for _, c in ipairs(breakables) do
				if c:IsA("Model") and tonumber(c.Name) then
					local p = c:FindFirstChildWhichIsA("BasePart")
					if p then
						player.Character.HumanoidRootPart.CFrame = p.CFrame + Vector3.new(0, 5, 0)
						while c.Parent do task.wait(0.1) end
					end
				end
			end
		else
			warn("ğŸ” Háº¿t rÆ°Æ¡ng, kiá»ƒm tra Ä‘iá»ƒm/tá»•ng run trong 3s...")
			local success = false
			for i = 1, 30 do
				task.wait(0.1)
				if getTimeTrialPoints() > startPoints or getTotalRuns() > startRuns then
					success = true
					break
				end
			end

			if success then
				warn("âœ… Äiá»ƒm hoáº·c tá»•ng run tÄƒng â†’ thoÃ¡t")
				teleportOutOfTimeTrial()
				return
			end

			warn("â³ KhÃ´ng Ä‘á»•i, Ä‘á»£i 20s xem cÃ³ rÆ°Æ¡ng láº¡i khÃ´ng...")
			for i = 1, 200 do
				if #workspace.__THINGS.Breakables:GetChildren() > 0 then
					warn("ğŸ“¦ RÆ°Æ¡ng xuáº¥t hiá»‡n láº¡i, tiáº¿p tá»¥c farm")
					break
				end
				task.wait(0.1)
			end

			if #workspace.__THINGS.Breakables:GetChildren() == 0 then
				warn("âŒ KhÃ´ng cÃ²n rÆ°Æ¡ng â†’ thoÃ¡t")
				teleportOutOfTimeTrial()
				return
			end
		end
		task.wait(0.1)
	end
end

-- HÃ m chÃ­nh
function RunTimeTrialScript()
	task.spawn(function()
		if game.PlaceId ~= 140403681187145 then return end

		waitUntilReachMaxZone()
		startMonitor12Min()

		while getRunsUsed() < 10 do
			local used = getRunsUsed()
			local startPoints = getTimeTrialPoints()
			local startRuns = getTotalRuns()

			warn("ğŸ” Báº¯t Ä‘áº§u lÆ°á»£t: " .. tostring(used))
			if not teleportIntoTimeTrial() then return end
			task.wait(3)

			startLagMonitor()
			teleportFarmLoop(startPoints, startRuns)
			task.wait(5)

			if lagMonitorThread then
				pcall(function()
					task.cancel(lagMonitorThread)
					lagMonitorThread = nil
				end)
			end
		end

		warn("ğŸ‰ HoÃ n táº¥t Time Trial hoáº·c Ä‘á»§ 10 lÆ°á»£t!")

		if monitor12minThread then
			pcall(function()
				task.cancel(monitor12minThread)
				monitor12minThread = nil
				warn("ğŸ›‘ Dá»«ng theo dÃµi 12 phÃºt khÃ´ng Ä‘á»•i lÆ°á»£t.")
			end)
		end

		-- Theo dÃµi reset DailyRuns
		task.spawn(function()
			while true do
				task.wait(300)
				if getRunsUsed() < 10 then
					warn("ğŸ” DailyRuns reset â†’ restart")
					_G.VAR_TIME_TRIAL = nil
					startMonitor12Min()
					RunTimeTrialScript()
					return
				end
			end
		end)
	end)
end

RunTimeTrialScript()
