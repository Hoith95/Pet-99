if _G.VAR_TIME_TRIAL then
	warn("Script đã được chạy trước đó!")
	return
end

-- Khởi tạo GUI Time Trial
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local Save = require(game.ReplicatedStorage.Library.Client.Save)
local ZoneCmds = require(game.ReplicatedStorage.Library.Client.ZoneCmds)

local function getTimeTrialRuns()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.Daily_run or 0)
end

local function getTimeTrialPoints()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.Points or 0)
end

-- Tạo GUI
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TimeTrialGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local function createLabel(name, position, bgColor)
	local label = Instance.new("TextLabel")
	label.Name = name
	label.AnchorPoint = Vector2.new(1, 0)
	label.Position = position
	label.Size = UDim2.new(0, 0, 0, 38)
	label.BackgroundColor3 = bgColor
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.Font = Enum.Font.GothamBold
	label.TextSize = 32
	label.Text = "..."
	label.BackgroundTransparency = 0
	label.BorderSizePixel = 0
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = screenGui
	return label
end

local pointsLabel = createLabel("PointsLabel", UDim2.new(1, -480, 0, -55), Color3.fromRGB(0, 128, 255))
local timeTrialLabel = createLabel("TimeTrialLabel", UDim2.new(1, -310, 0, -55), Color3.fromRGB(128, 0, 128))

local function updateLabelSize(label)
	label.Size = UDim2.new(0, label.TextBounds.X + 20, 0, 38)
end

task.spawn(function()
	while true do
		local runs = getTimeTrialRuns()
		local points = getTimeTrialPoints()

		pointsLabel.Text = "Points: " .. tostring(points)
		updateLabelSize(pointsLabel)

		timeTrialLabel.Text = "Time Trial: " .. tostring(runs)
		updateLabelSize(timeTrialLabel)

		task.wait(10)
	end
end)

local function RunTimeTrialScript()
	task.spawn(function()
		if game.PlaceId ~= 140403681187145 then return end

		local BreakablesFolder = workspace.__THINGS.Breakables
		local LeaveTeleport = workspace.__THINGS.Instances.TimeTrial.Teleports.Leave
		local EnterTeleport = workspace.__THINGS.Instances.TimeTrial.Teleports.Enter
		local savedPosition = nil

		local function teleportTo(part)
			if part and part.CFrame then
				local character = player.Character or player.CharacterAdded:Wait()
				if character and character:FindFirstChild("HumanoidRootPart") then
					character.HumanoidRootPart.CFrame = part.CFrame + Vector3.new(0, 5, 0)
				end
			end
		end

		local function isInsideXRegion()
			local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
			if not hrp then return false end
			local x = hrp.Position.X
			return x >= -18425 and x <= -18415
		end

		local function waitUntilReachZone(targetZone)
			while true do
				local _, currentZoneData = ZoneCmds.GetMaxOwnedZone()
				if currentZoneData and currentZoneData.ZoneNumber >= targetZone then
					break
				end
				task.wait(5)
			end
		end

		local function getCurrentBreakables()
			local list = {}
			for _, child in ipairs(BreakablesFolder:GetChildren()) do
				if child:IsA("Model") and tonumber(child.Name) ~= nil then
					table.insert(list, child.Name)
				end
			end
			return list
		end

		local function waitUntilBreakableGone(name)
			while BreakablesFolder:FindFirstChild(name) do
				task.wait(0.1)
			end
		end

		local function teleportToBreakables()
			while true do
				local names = getCurrentBreakables()
				if #names == 0 then break end
				for _, name in ipairs(names) do
					local b = BreakablesFolder:FindFirstChild(name)
					if b then
						local part = b:FindFirstChildWhichIsA("BasePart")
						if part then
							teleportTo(part)
							waitUntilBreakableGone(name)
						end
					end
				end
			end
		end

		local function monitorRegionX()
			task.spawn(function()
				while true do
					repeat task.wait(1) until isInsideXRegion()
					local start = tick()
					while tick() - start < 30 do
						if not isInsideXRegion() then break end
						task.wait(1)
					end
					if isInsideXRegion() then
						player:Kick("Lag: Đứng im vùng X > 30s")
						return
					end
				end
			end)
		end

		monitorRegionX()
		waitUntilReachZone(ZoneCmds.GetMaxOwnedZone())

		while true do
			local runs = getTimeTrialRuns()
			if runs >= 10 then break end

			savedPosition = player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character.HumanoidRootPart.CFrame

			teleportTo(EnterTeleport)
			task.wait(5)

			local found = false
			for i = 1, 60 do
				if #getCurrentBreakables() > 0 then
					found = true
					break
				end
				task.wait(0.1)
			end

			if found then
				teleportToBreakables()
				task.wait(5)
			end

			if LeaveTeleport then teleportTo(LeaveTeleport) task.wait(3) end
			if savedPosition then teleportTo({CFrame = savedPosition}) end

			task.wait(15)
		end

		-- Sau khi đủ 10 lượt, chờ 5 phút xem có reset không
		local oldRun = getTimeTrialRuns()
		task.wait(300)
		local newRun = getTimeTrialRuns()
		if newRun < oldRun then
			RunTimeTrialScript()
		end
	end)
end

RunTimeTrialScript()
