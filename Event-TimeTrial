if _G.VAR_TIME_TRIAL then
	warn("Script Ä‘Ã£ Ä‘Æ°á»£c cháº¡y trÆ°á»›c Ä‘Ã³!")
	return
end

_G.VAR_TIME_TRIAL = true

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local Save = require(game.ReplicatedStorage.Library.Client.Save)
local ZoneCmds = require(game.ReplicatedStorage.Library.Client.ZoneCmds)
local playerGui = player:WaitForChild("PlayerGui")

local function getRunsUsed()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.DailyRuns or 0) or 0
end
local function getRunsLeft()
	return 10 - getRunsUsed()
end
local function getTimeTrialPoints()
	local saveData = Save.Get()
	return saveData and saveData.TimeTrialStats and (saveData.TimeTrialStats.Points or 0) or 0
end

-- GUI
local screenGui = playerGui:FindFirstChild("TimeTrialGui")
if not screenGui then
	screenGui = Instance.new("ScreenGui")
	screenGui.Name = "TimeTrialGui"
	screenGui.ResetOnSpawn = false
	screenGui.Parent = playerGui
end

local function createLabel(name, position, anchor, bgColor)
	local label = Instance.new("TextLabel")
	label.Name = name
	label.AnchorPoint = anchor
	label.Position = position
	label.Size = UDim2.new(0, 0, 0, 38)
	label.BackgroundColor3 = bgColor
	label.TextColor3 = Color3.new(1,1,1)
	label.Font = Enum.Font.GothamBold
	label.TextSize = 32
	label.BackgroundTransparency = 0
	label.BorderSizePixel = 0
	label.TextXAlignment = Enum.TextXAlignment.Center
	label.Text = "..."
	label.Parent = screenGui
	return label
end

local function updateLabelSize(label)
	label.Size = UDim2.new(0, label.TextBounds.X + 20, 0, 38)
end

local pointsLabel = screenGui:FindFirstChild("PointsLabel") or createLabel("PointsLabel", UDim2.new(0, 0, 0, -55), Vector2.new(0, 0), Color3.fromRGB(0, 128, 255))
local timeTrialLabel = screenGui:FindFirstChild("TimeTrialLabel") or createLabel("TimeTrialLabel", UDim2.new(0.5, 25, 0, -55), Vector2.new(0.5, 0), Color3.fromRGB(128, 0, 128))

task.spawn(function()
	while true do
		pointsLabel.Text = "Äiá»ƒm: " .. tostring(getTimeTrialPoints())
		updateLabelSize(pointsLabel)
		timeTrialLabel.Text = "Time Trial: " .. tostring(getRunsLeft()) .. " / 10"
		updateLabelSize(timeTrialLabel)
		task.wait(10)
	end
end)

-- âš™ï¸ Láº¥y zone tá»‘i Ä‘a tá»« Map4 trong workspace
local function getMaxZoneFromMap4()
	local mapFolder = workspace:FindFirstChild("Map4")
	if not mapFolder then
		warn("âŒ KhÃ´ng tÃ¬m tháº¥y Map4 trong workspace.")
		return 0
	end

	local maxZone = 0
	for _, folder in ipairs(mapFolder:GetChildren()) do
		if folder:IsA("Folder") then
			local zoneNumber = tonumber(folder.Name:match("^(%d+)"))
			if zoneNumber and zoneNumber > maxZone then
				maxZone = zoneNumber
			end
		end
	end

	return maxZone
end

-- ğŸ§ Láº¥y zone hiá»‡n táº¡i cá»§a ngÆ°á»i chÆ¡i
local function getPlayerZone()
	local _, data = ZoneCmds.GetMaxOwnedZone()
	return data and data.ZoneNumber or 0
end

-- â³ Äá»£i tá»›i khi Ä‘áº¡t zone tá»‘i Ä‘a
local function waitUntilReachMaxZone()
	local maxZone = getMaxZoneFromMap4()
	warn("ğŸŒ Zone tá»‘i Ä‘a trÃªn báº£n Ä‘á»“: " .. maxZone)

	while true do
		local currentZone = getPlayerZone()
		warn("ğŸ§ Zone hiá»‡n táº¡i cá»§a báº¡n: " .. currentZone)
		if currentZone >= maxZone then
			warn("âœ… ÄÃ£ Ä‘áº¡t Zone tá»‘i Ä‘a (" .. currentZone .. ") â†’ báº¯t Ä‘áº§u script")
			break
		end
		task.wait(60) -- Kiá»ƒm tra láº¡i má»—i phÃºt
	end
end

waitUntilReachMaxZone()
-- MAIN SCRIPT
function RunTimeTrialScript()
	task.spawn(function()
		if game.PlaceId ~= 140403681187145 then return end

		local BreakablesFolder = workspace.__THINGS.Breakables
		local Enter = workspace.__THINGS.Instances.TimeTrial.Teleports.Enter
		local Leave = workspace.__THINGS.Instances.TimeTrial.Teleports.Leave

		local function teleportTo(part)
			local character = player.Character or player.CharacterAdded:Wait()
			if character and character:FindFirstChild("HumanoidRootPart") and part and part.CFrame then
				character.HumanoidRootPart.CFrame = part.CFrame + Vector3.new(0, 5, 0)
			end
		end

		local function isBreakable(inst)
			return inst:IsA("Model") and tonumber(inst.Name) ~= nil
		end
		local function getBreakables()
			local t = {}
			for _, c in ipairs(BreakablesFolder:GetChildren()) do
				if isBreakable(c) then table.insert(t, c.Name) end
			end
			return t
		end
		local function waitGone(name)
			while BreakablesFolder:FindFirstChild(name) do task.wait(0.1) end
		end

		local function teleportFarmLoop()
			if isRestarting then
				isRestarting = false
				return
			end

			local flagLag = false

			local function startLagMonitor()
				task.spawn(function()
					while not flagLag do
						local before = #getBreakables()
						task.wait(60)
						local after = #getBreakables()
						if before == after then
							flagLag = true
							isRestarting = true
							warn("âš ï¸ Lag phÃ¡t hiá»‡n: sá»‘ lÆ°á»£ng Breakables khÃ´ng Ä‘á»•i trong 60s.")
							if Leave then teleportTo(Leave) end
							task.wait(15)
							flagLag = false
							warn("ğŸ” ÄÃ¡nh dáº¥u restart, vÃ²ng chÃ­nh sáº½ tá»± xá»­ lÃ½")
							return
						end
					end
				end)
			end

			startLagMonitor()

			while not flagLag do
				local names = getBreakables()
				if #names > 0 then
					for _, n in ipairs(names) do
						if flagLag then return end
						local b = BreakablesFolder:FindFirstChild(n)
						if b then
							local p = b:FindFirstChildWhichIsA("BasePart")
							if p then
								teleportTo(p)
								waitGone(n)
							end
						end
					end
				else
					local startRuns = getRunsUsed()
					for i = 1, 5 do
						task.wait(1)
						if getRunsUsed() ~= startRuns then
							warn("âœ… DailyRuns thay Ä‘á»•i â†’ thoÃ¡t ngay")
							if Leave then teleportTo(Leave) end
							task.wait(5)
							return
						end
					end

					warn("â³ KhÃ´ng cÃ³ rÆ°Æ¡ng, chá» 20s...")
					task.wait(20)

					if #getBreakables() > 0 then
						warn("ğŸ“¦ RÆ°Æ¡ng xuáº¥t hiá»‡n láº¡i, tiáº¿p tá»¥c")
					else
						if getRunsUsed() ~= startRuns then
							warn("âœ… DailyRuns thay Ä‘á»•i sau delay")
						else
							warn("âŒ KhÃ´ng cÃ³ gÃ¬ thay Ä‘á»•i, káº¿t thÃºc")
						end
						if Leave then teleportTo(Leave) end
						task.wait(5)
						return
					end
				end
				task.wait(0.5)
			end
		end

		while getRunsUsed() < 10 do
			local used = getRunsUsed()
			warn("ğŸ” Báº¯t Ä‘áº§u lÆ°á»£t: " .. tostring(used))

			local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
			local savedPos = hrp and hrp.CFrame

			teleportTo(Enter)
			task.wait(5)
			warn("ğŸšª VÃ o Time Trial, báº¯t Ä‘áº§u farm")

			local waitTime = 0
			while #getBreakables() == 0 and waitTime < 10 do
				task.wait(0.5)
				waitTime += 0.5
			end

			teleportFarmLoop()

			if isRestarting then
				warn("â†ªï¸ Bá» lÆ°á»£t hiá»‡n táº¡i vÃ¬ isRestarting, káº¿t thÃºc sá»›m")
				_G.VAR_TIME_TRIAL = nil
				return
			end

			if Leave then teleportTo(Leave) end
			task.wait(3)

			if savedPos then
				local part = Instance.new("Part")
				part.Anchored = true
				part.CFrame = savedPos
				part.Transparency = 1
				part.CanCollide = false
				part.Parent = workspace
				teleportTo(part)
				task.delay(1, function() part:Destroy() end)
				warn("ğŸ”™ Quay vá» vá»‹ trÃ­ ban Ä‘áº§u")
			end

			task.wait(15)
		end

		warn("ğŸ‰ HoÃ n táº¥t Time Trial hoáº·c Ä‘á»§ 10 lÆ°á»£t")

		task.spawn(function()
			while true do
				task.wait(300)
				if getRunsUsed() < 10 then
					warn("ğŸ” DailyRuns reset â†’ chuáº©n bá»‹ restart")
					_G.VAR_TIME_TRIAL = nil
					return
				end
			end
		end)
	end)
end

RunTimeTrialScript()

-- ğŸ” Auto restart náº¿u script reset
task.spawn(function()
	while true do
		task.wait(10)
		if not _G.VAR_TIME_TRIAL then
			warn("â« Script Ä‘Ã£ reset â†’ khá»Ÿi Ä‘á»™ng láº¡i")
			_G.VAR_TIME_TRIAL = true
			RunTimeTrialScript()
		end
	end
end)

-- â° Theo dÃµi 12 phÃºt khÃ´ng thay Ä‘á»•i
task.spawn(function()
	while getTimeTrialPoints() <= 0 do task.wait(10) end
	while true do
		local start = getRunsUsed()
		local t = 0
		while t < 720 do
			task.wait(10)
			t += 10
			if getRunsUsed() ~= start then break end
		end
		if getRunsUsed() == start then
			player:Kick("â° 12 phÃºt khÃ´ng thay Ä‘á»•i lÆ°á»£t Time Trial.")
			return
		end
	end
end)
