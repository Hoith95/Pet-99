-- VÃ²ng láº·p nÃ y Ä‘á»£i cho Ä‘áº¿n khi trÃ² chÆ¡i Ä‘Æ°á»£c táº£i hoÃ n toÃ n.
repeat task.wait() until game:IsLoaded()
local LocalPlayer = game:GetService('Players').LocalPlayer
repeat
    wait()
until game:IsLoaded()

-- Kiá»ƒm tra biáº¿n toÃ n cá»¥c Ä‘á»ƒ xÃ¡c Ä‘á»‹nh script Ä‘Ã£ cháº¡y hay chÆ°a
if _G.VARBOOST then
    warn("Script Ä‘Ã£ Ä‘Æ°á»£c cháº¡y trÆ°á»›c Ä‘Ã³!")
    return -- Dá»«ng script náº¿u Ä‘Ã£ cháº¡y
end

-- ÄÃ¡nh dáº¥u script Ä‘Ã£ Ä‘Æ°á»£c cháº¡y
_G.VARBOOST = true

local player = game.Players.LocalPlayer
local replicatedStorage = game:GetService("ReplicatedStorage")
local network = replicatedStorage:WaitForChild("Network")

-- HÃ m kiá»ƒm tra vÃ  dÃ¹ng boost náº¿u cáº§n
local function checkAndUseBoosts()
	local boostsFolder = player:WaitForChild("PlayerGui"):WaitForChild("Main"):WaitForChild("Boosts")

	local hasXPScroll = false
	local hasSpeedScroll = false

	for _, boost in pairs(boostsFolder:GetChildren()) do
		local name = boost.Name
		if name == "Effects_Fishing XP Scroll" then
			hasXPScroll = true
		elseif name == "Effects_Fishing Speed Scroll" then
			hasSpeedScroll = true
		end
	end

	-- Xá»­ lÃ½ Fishing XP Scroll
	if not hasXPScroll then
		print("âŒ KhÃ´ng cÃ³ Fishing XP Scroll. Äang sá»­ dá»¥ng...")
		local args = {
			[1] = "c8ea556cc73c426ab2a7899d0700272f", -- Fishing XP Scroll ID
			[2] = 1
		}
		network.Consumables_Consume:InvokeServer(unpack(args))
	else
		print("ğŸ£ Fishing XP Scroll Ä‘ang hoáº¡t Ä‘á»™ng.")
	end

	-- Xá»­ lÃ½ Fishing Speed Scroll
	if not hasSpeedScroll then
		print("âŒ KhÃ´ng cÃ³ Fishing Speed Scroll. Äang sá»­ dá»¥ng...")
		local args = {
			[1] = "4ea2472dc1794bfb84489aa4d3b447f3", -- Fishing Speed Scroll ID
			[2] = 1
		}
		network.Consumables_Consume:InvokeServer(unpack(args))
	else
		print("âš¡ Fishing Speed Scroll Ä‘ang hoáº¡t Ä‘á»™ng.")
	end
end

-- Láº·p vÄ©nh viá»…n má»—i 2 phÃºt
while true do
	checkAndUseBoosts()
	task.wait(120) -- chá» 2 phÃºt
end
