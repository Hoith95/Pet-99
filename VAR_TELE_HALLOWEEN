-- Prevent cháº¡y láº¡i nhiá»u láº§n
if _G.VAR_TELE_HALLOWEEN then return end
_G.VAR_TELE_HALLOWEEN = true

-- Detect Halloween Instance
local function inHalloweenWorld()
    local inst = workspace:FindFirstChild("__THINGS")
        and workspace.__THINGS:FindFirstChild("__INSTANCE_CONTAINER")
        and workspace.__THINGS.__INSTANCE_CONTAINER:FindFirstChild("Active")
    return inst and inst:FindFirstChild("HalloweenWorld") ~= nil
end

local player = game.Players.LocalPlayer

-- âŒ Náº¿u KHÃ”NG á»Ÿ Halloween â†’ Kick
if not inHalloweenWorld() then
    player:Kick("Báº¡n khÃ´ng á»Ÿ Halloween World!")
    return
end

-- âœ… Náº¿u Ä‘ang á»Ÿ Ä‘Ãºng Halloween Instance â†’ Dá»ªNG SCRIPT (khÃ´ng lÃ m gÃ¬ ná»¯a)
print("ğŸƒ Äang á»Ÿ Halloween Instance â€” Dá»ªNG SCRIPT.")
return
