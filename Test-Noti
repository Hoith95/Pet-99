-- üìå GUI Block Party - hi·ªÉn th·ªã Coins v√† s·ªë l∆∞·ª£ng Tiles
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- üì¶ Module Save & Tiles
local SaveModule = require(ReplicatedStorage.Library.Client.Save)
local TilesFolder = workspace:WaitForChild("__THINGS"):WaitForChild("Tiles")

-- üí∞ L·∫•y s·ªë l∆∞·ª£ng theo id (BlockPartyCoins)
local function getCurrencyAmount(currencyId)
    local Inventory = SaveModule.Get().Inventory
    for _, v in pairs(Inventory.Currency) do 
        if v.id == currencyId then
            return v._am
        end
    end
    return 0
end

-- üî¢ ƒê·∫øm t·ªïng s·ªë tile
local function getTotalTileCount()
	return #TilesFolder:GetChildren()
end

-- üñºÔ∏è T·∫°o GUI
local screenGui = playerGui:FindFirstChild("BlockPartyGui")
if not screenGui then
	screenGui = Instance.new("ScreenGui")
	screenGui.Name = "BlockPartyGui"
	screenGui.ResetOnSpawn = false
	screenGui.Parent = playerGui
end

local function createLabel(name, position, anchor, bgColor)
	local label = Instance.new("TextLabel")
	label.Name = name
	label.AnchorPoint = anchor
	label.Position = position
	label.Size = UDim2.new(0, 0, 0, 38)
	label.BackgroundColor3 = bgColor
	label.TextColor3 = Color3.new(1, 1, 1)
	label.Font = Enum.Font.GothamBold
	label.TextSize = 32
	label.BackgroundTransparency = 0
	label.BorderSizePixel = 0
	label.TextXAlignment = Enum.TextXAlignment.Center
	label.Text = "..."
	label.Parent = screenGui
	return label
end

local function updateLabelSize(label)
	label.Size = UDim2.new(0, label.TextBounds.X + 20, 0, 38)
end

-- üè∑Ô∏è T·∫°o Label ‚Äî ƒë·∫∑t ph√≠a d∆∞·ªõi GUI c≈© (Y = -10 thay v√¨ -55)
local coinsLabel = createLabel("CoinsLabel", UDim2.new(0, 0, 0, -10), Vector2.new(0, 0), Color3.fromRGB(255, 165, 0))
local tilesLabel = createLabel("TilesLabel", UDim2.new(0.5, 30, 0, -10), Vector2.new(0.5, 0), Color3.fromRGB(0, 128, 0))

-- üîÅ C·∫≠p nh·∫≠t n·ªôi dung m·ªói 10 gi√¢y
task.spawn(function()
	while true do
		-- ü™ô C·∫≠p nh·∫≠t coins
		local coins = getCurrencyAmount("BlockPartyCoins")
		coinsLabel.Text = "Coins: " .. tostring(coins)
		updateLabelSize(coinsLabel)

		-- üî≤ C·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng tile
		local totalTiles = getTotalTileCount()
		tilesLabel.Text = "Tiles: " .. tostring(totalTiles)
		updateLabelSize(tilesLabel)

		task.wait(10)
	end
end)
